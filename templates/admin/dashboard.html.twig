{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const monthlyData = {{ monthlyData|json_encode|raw }};
            const yearlyData = {{ yearlyData|json_encode|raw }};

            const commonOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            usePointStyle: true,
                            font: { family: 'Inter, system-ui, sans-serif', weight: '500' }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(0, 0, 0, 0.05)' },
                        ticks: { font: { family: 'Inter, system-ui, sans-serif' } }
                    },
                    x: {
                        grid: { color: 'rgba(0, 0, 0, 0.05)' },
                        ticks: { font: { family: 'Inter, system-ui, sans-serif' } }
                    }
                }
            };

            const commercialSelector = document.getElementById('commercial-selector');
            const commercialContainer = document.getElementById('commercial-dashboard-container');
            const paoSelector = document.getElementById('pao-selector');
            const paoContainer = document.getElementById('pao-dashboard-container');

            /** Fonction de chargement AJAX **/
            async function loadDashboardContent(url, container) {
                container.innerHTML = `
                    <div class="text-center p-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Chargement...</span>
                        </div>
                    </div>`;
                try {
                    const response = await fetch(url, {
                        headers: { 'X-Requested-With': 'XMLHttpRequest' } // important pour Symfony
                    });
                    if (!response.ok) throw new Error('Erreur réseau');

                    const data = await response.json(); // on parse le JSON
                    container.innerHTML = data.html;    // on injecte le HTML

                    // ⚙️ Réinitialise le formulaire de recherche AJAX après rechargement
                    const form = container.querySelector('.ajax-search-form');
                    if (form) initAjaxSearchForm(form, container);
                } catch (error) {
                    console.error('Erreur Fetch:', error);
                    container.innerHTML = '<div class="alert alert-danger">Erreur de chargement des données.</div>';
                }
            }

            /** Fonction pour initialiser la recherche dynamique dans le dashboard commercial **/
            function initAjaxSearchForm(form, container) {
                form.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    const formData = new FormData(form);
                    const queryString = new URLSearchParams(formData).toString();
                    const url = `{{ path('admin_supervision_commercial') }}?${queryString}`;
                    await loadDashboardContent(url, container);
                });
            }

            /** 🧑‍💼 Sélecteur des commerciaux **/
            if (commercialSelector) {
                commercialSelector.addEventListener('change', function() {
                    const commercialId = this.value;
                    if (commercialId) {
                        const url = `{{ path('admin_supervision_commercial') }}?commercial_id=${commercialId}`;
                        loadDashboardContent(url, commercialContainer);
                    } else {
                        commercialContainer.innerHTML = '';
                    }
                });
            }

            /** Sélecteur des PAO **/
            if (paoSelector) {
                paoSelector.addEventListener('change', function() {
                    const paoId = this.value;
                    if (paoId) {
                        const url = `{{ path('admin_supervision_pao') }}?pao_id=${paoId}`;
                        loadDashboardContent(url, paoContainer);
                    } else {
                        paoContainer.innerHTML = '';
                    }
                });
            }

            /** Graphiques Chart.js **/
            if (document.getElementById('monthlyOrderChart')) {
                new Chart(document.getElementById('monthlyOrderChart'), {
                    type: 'line',
                    data: {
                        labels: monthlyData.map(i => i.period),
                        datasets: [{
                            label: 'Nombre de Commandes',
                            data: monthlyData.map(i => i.orderCount),
                            borderColor: 'rgb(102, 126, 234)',
                            backgroundColor: 'rgba(102, 126, 234, 0.1)',
                            tension: 0.4,
                            fill: true,
                            pointBackgroundColor: 'rgb(102, 126, 234)',
                            pointBorderColor: '#fff',
                            pointBorderWidth: 2,
                            pointRadius: 5
                        }]
                    },
                    options: commonOptions
                });
            }

            if (document.getElementById('monthlyRevenueChart')) {
                new Chart(document.getElementById('monthlyRevenueChart'), {
                    type: 'bar',
                    data: {
                        labels: monthlyData.map(i => i.period),
                        datasets: [{
                            label: 'Total Ventes (MGA)',
                            data: monthlyData.map(i => i.totalAmount),
                            backgroundColor: 'rgba(54, 162, 235, 0.8)',
                            borderRadius: 6,
                            borderSkipped: false
                        }]
                    },
                    options: commonOptions
                });
            }

            if (document.getElementById('yearlyOrderChart')) {
                new Chart(document.getElementById('yearlyOrderChart'), {
                    type: 'bar',
                    data: {
                        labels: yearlyData.map(i => i.period),
                        datasets: [{
                            label: 'Nombre de Commandes',
                            data: yearlyData.map(i => i.orderCount),
                            backgroundColor: 'rgba(255, 99, 132, 0.8)',
                            borderRadius: 6,
                            borderSkipped: false
                        }]
                    },
                    options: commonOptions
                });
            }

            if (document.getElementById('yearlyRevenueChart')) {
                new Chart(document.getElementById('yearlyRevenueChart'), {
                    type: 'line',
                    data: {
                        labels: yearlyData.map(i => i.period),
                        datasets: [{
                            label: 'Total Ventes (MGA)',
                            data: yearlyData.map(i => i.totalAmount),
                            borderColor: 'rgb(255, 205, 86)',
                            backgroundColor: 'rgba(255, 205, 86, 0.1)',
                            tension: 0.4,
                            fill: true
                        }]
                    },
                    options: commonOptions
                });
            }

            /** Filtres Mois / Année pour les produits **/
            const monthSelector = document.getElementById('monthSelector');
            const yearSelector = document.getElementById('yearSelector');

            if (monthSelector) {
                monthSelector.addEventListener('change', async (e) => {
                    const month = e.target.value;
                    const res = await fetch(`/admin/best-products?type=month&month=${month}`);
                    document.getElementById('best-products-month').innerHTML = await res.text();
                });
            }

            if (yearSelector) {
                yearSelector.addEventListener('change', async (e) => {
                    const year = e.target.value;
                    const res = await fetch(`/admin/best-products?type=year&year=${year}`);
                    document.getElementById('best-products-year').innerHTML = await res.text();
                });
            }

            // NOUVEAU SCRIPT POUR LA PRODUCTION
            const productionSelector = document.getElementById('production-selector');
            const productionContainer = document.getElementById('production-dashboard-container');

            function loadProductionData() {
                const productionId = productionSelector.value;
                if (!productionId) {
                    productionContainer.innerHTML = '<div class="text-center text-muted">Veuillez sélectionner un utilisateur de production pour voir ses statistiques.</div>';
                    return;
                }
                
                productionContainer.innerHTML = '<div class="text-center"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div>';

                const url = `{{ path('admin_supervision_production') }}?production_id=${productionId}`;

                fetch(url)
                    .then(response => response.json())
                    .then(data => {
                        productionContainer.innerHTML = data.html;
                    })
                    .catch(error => {
                        console.error('Error fetching production data:', error);
                        productionContainer.innerHTML = '<div class="alert alert-danger">Erreur lors du chargement des données.</div>';
                    });
            }

            if (productionSelector) {
                productionSelector.addEventListener('change', loadProductionData);

                // Charger les données initialement si un utilisateur est déjà sélectionné
                if (productionSelector.value) {
                    loadProductionData();
                }
            }
        });
    </script>
