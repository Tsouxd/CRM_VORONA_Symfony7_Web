        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-industry me-2"></i>Suivi Production</h5>
                    <select id="production-selector" class="form-select mt-2">
                        <option value="">-- Sélectionner un utilisateur de production --</option>
                        {% for production in productions %}
                            <option value="{{ production.id }}" {{ production.id == selectedProductionId ? 'selected' : '' }}>
                                {{ production.username }}
                            </option>
                        {% endfor %}
