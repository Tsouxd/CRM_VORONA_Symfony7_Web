        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-pencil-ruler me-2"></i>Suivi PAO</h5>
                    <select id="pao-selector" class="form-select mt-2">
                        <option value="">-- Sélectionner un PAO --</option>
                        {% for pao in paos %}
                            <option value="{{ pao.id }}">{{ pao.username }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="card-body" id="pao-dashboard-container">
                    <div class="text-center text-muted pt-3">Veuillez sélectionner un PAO pour voir les détails.</div>
                </div>
            </div>
        </div>
    </div>

    <!-- SUPERVISION PRODUCTION (Sur sa propre ligne) -->
