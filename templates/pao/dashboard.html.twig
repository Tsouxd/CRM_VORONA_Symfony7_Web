{# templates/pao/dashboard.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{# Définir le titre de la page #}
{% block content_title %}
    Tableau de bord PAO
{% endblock %}

{# Contenu principal de la page #}
{% block main %}

    {# ================================================================= #}
    {# 1. Cartes de statistiques principales (KPIs)                       #}
    {# ================================================================= #}
    <div class="row">

        {# --- Carte : Travaux en attente (Backlog total) --- #}
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Travaux en attente (Total)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ worksPendingCount }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-inbox fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        {# --- Carte : Travaux en cours (Total) --- #}
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Travaux en cours (Total)</div>
                            {# MISE À JOUR : Utilisation de la nouvelle variable correcte #}
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ workInProgressCount }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-cogs fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# --- Carte : Travaux faits AUJOURD'HUI --- #}
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Faits (Aujourd'hui)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ workDoneToday }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# --- Carte : Travaux en modification AUJOURD'HUI --- #}
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Modifications (Aujourd'hui)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ workModificationToday }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-edit fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    {# ================================================================= #}
    {# 2. Graphique de l'activité mensuelle                            #}
    {# ================================================================= #}
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">PAO terminés par jour pour {{ selectedMonth|date("F Y") }}</h6>
                    <div>
                        {% set prevMonth = date(selectedMonth ~ '-01')|date_modify('-1 month')|date('Y-m') %}
                        {% set nextMonth = date(selectedMonth ~ '-01')|date_modify('+1 month')|date('Y-m') %}
                        <a href="{{ path('pao_dashboard', {month: prevMonth}) }}" class="btn btn-sm btn-secondary"><i class="fa fa-arrow-left"></i></a>
                        <a href="{{ path('pao_dashboard', {month: nextMonth}) }}" class="btn btn-sm btn-secondary"><i class="fa fa-arrow-right"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-area" style="height: 300px;">
                        <canvas id="paoDoneChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# ================================================================= #}
    {# 3. Tableau de l'historique des commandes terminées              #}
    {# ================================================================= #}
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Historique des commandes terminées (hors aujourd'hui)</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th># Commande</th>
                                    <th>Client</th>
                                    <th>Terminée le</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% if doneCommandsPast is not empty %}
                                {% for commande in doneCommandsPast %}
                                    <tr>
                                        <td><a href="{{ path('admin', {crudAction: 'detail', crudControllerFqcn: 'App\\Controller\\Admin\\CommandeCrudController', entityId: commande.id}) }}">{{ commande.id }}</a></td>
                                        <td>{{ commande.client.nomSociete ?? 'N/A' }}</td>
                                        <td>{{ commande.updatedAt|date("d/m/Y à H:i") }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center">Aucune commande terminée à afficher dans l'historique.</td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {# ================================================================= #}
    {# Script pour initialiser le graphique (Chart.js)                 #}
    {# N'oubliez pas d'importer Chart.js si ce n'est pas déjà fait     #}
    {# dans votre layout de base ou via Webpack Encore.                #}
    {# ================================================================= #}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('paoDoneChart').getContext('2d');
            const paoDoneChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: {{ chartLabels|json_encode|raw }},
                    datasets: [{
                        label: 'PAO Terminés',
                        data: {{ chartValues|json_encode|raw }},
                        backgroundColor: 'rgba(78, 115, 223, 0.8)',
                        borderColor: 'rgba(78, 115, 223, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1 // Affiche uniquement des entiers sur l'axe Y
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}