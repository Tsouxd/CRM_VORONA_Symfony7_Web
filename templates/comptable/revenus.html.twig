{% extends 'base.html.twig' %}

{% block title %}Liste des Révenus{% endblock %}

{% block body %}
<div class="expenses-container">
    <a href="{{ path('app_comptable') }}" class="back-button">
        <i class="fas fa-arrow-left me-2"></i>Tableau de bord
    </a>
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="expenses-card">
                    <div class="expenses-header">
                        <h1 class="expenses-title">
                            <i class="fas fa-minus-circle me-3"></i>
                            Liste des Révenus
                        </h1>
                        <a href="{{ path('app_comptable_revenus_ajouter') }}" class="add-button">
                            <i class="fas fa-plus me-2"></i>
                            Ajouter une révenue
                        </a>
                    </div>
                    
                    <div class="table-container">
                        {% if revenus is not empty %}
                            <table class="expenses-table">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-hashtag me-2"></i>ID</th>
                                        <th><i class="fas fa-file-alt me-2"></i>Description</th>
                                        <th><i class="fas fa-euro-sign me-2"></i>Montant</th>
                                        <th><i class="fas fa-calendar me-2"></i>Date</th>
                                        <th><i class="fas fa-cogs me-2"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for d in revenus %}
                                    <tr class="table-row-animation" style="animation-delay: {{ loop.index0 * 0.1 }}s;">
                                        <td>
                                            <span class="expense-id">#{{ d.id }}</span>
                                        </td>
                                        <td>
                                            <div class="expense-description" title="{{ d.description }}">
                                                {{ d.description }}
                                            </div>
                                        </td>
                                        <td>
                                            <span class="expense-amount">{{ d.montant|number_format(2, ',', ' ') }} €</span>
                                        </td>
                                        <td>
                                            <div class="expense-date">
                                                {{ d.date|date('d/m/Y') }}
                                            </div>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a href="{{ path('app_comptable_revenus_modifier', {id: d.id}) }}" 
                                                   class="btn-action btn-edit" 
                                                   title="Modifier ce révenu">
                                                    <i class="fas fa-edit me-1"></i>Modifier
                                                </a>
                                                <a href="{{ path('app_comptable_revenus_supprimer', {id: d.id}) }}" 
                                                   class="btn-action btn-delete" 
                                                   title="Supprimer ce révenu"
                                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce révenu ?');">
                                                    <i class="fas fa-trash me-1"></i>Supprimer
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <div class="empty-state">
                                <div class="empty-icon">
                                    <i class="fas fa-inbox"></i>
                                </div>
                                <h3>Aucune révenu enregistrée</h3>
                                <p>Commencez par ajouter votre premier révenu pour voir apparaître vos données ici.</p>
                                <a href="{{ path('app_comptable_revenus_ajouter') }}" class="add-button" style="margin-top: 1rem;">
                                    <i class="fas fa-plus me-2"></i>
                                    Ajouter mon premier révenu
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}