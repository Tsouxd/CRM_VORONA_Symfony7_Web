{% extends 'base.html.twig' %}

{% block title %}Formulaire Dépense{% endblock %}

{% block body %}
<div class="form-container">
    <a href="{{ path('app_comptable_depenses') }}" class="back-button">
        <i class="fas fa-arrow-left me-2"></i>Retour
    </a>
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="form-card">
                    <div class="form-header">
                        <h1 class="form-title">
                            <i class="fas fa-plus-circle me-3" style="color: #667eea;"></i>
                            Nouvelle Dépense
                        </h1>
                        
                        {% if user %}
                            <div class="user-badge">
                                <i class="fas fa-user me-2"></i>
                                Connecté en tant que : {{ user.username }}
                            </div>
                        {% else %}
                            <div class="user-badge disconnected">
                                <i class="fas fa-user-slash me-2"></i>
                                Non connecté
                            </div>
                        {% endif %}
                    </div>
                    
                    {{ form_start(form, {'attr': {'class': 'expense-form', 'novalidate': 'novalidate'}}) }}
                        
                        <div class="form-group">
                            {{ form_label(form.description, 'Description de la dépense', {'label_attr': {'class': 'form-label'}}) }}
                            <div style="position: relative;">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Décrivez votre dépense...'}}) }}
                                <i class="fas fa-edit form-icon"></i>
                            </div>
                            {{ form_errors(form.description) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.montant, 'Montant (€)', {'label_attr': {'class': 'form-label'}}) }}
                            <div style="position: relative;">
                                {{ form_widget(form.montant, {'attr': {'class': 'form-control', 'placeholder': '0.00', 'step': '0.01'}}) }}
                                <i class="fas fa-euro-sign form-icon"></i>
                            </div>
                            {{ form_errors(form.montant) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.date, 'Date de la dépense', {'label_attr': {'class': 'form-label'}}) }}
                            <div style="position: relative;">
                                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                                <i class="fas fa-calendar-alt form-icon"></i>
                            </div>
                            {{ form_errors(form.date) }}
                        </div>
                        
                        {% if form.categorie is defined %}
                        <div class="form-group">
                            {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                            <div style="position: relative;">
                                {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                                <i class="fas fa-tags form-icon"></i>
                            </div>
                            {{ form_errors(form.categorie) }}
                        </div>
                        {% endif %}
                        
                        {{ form_rest(form) }}
                        
                        <button type="submit" class="btn-submit">
                            <i class="fas fa-save me-2"></i>
                            Enregistrer la dépense
                        </button>
                        
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}