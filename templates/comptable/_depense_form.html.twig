{{ form_start(form, {'attr': {'id': 'edit-expense-form', 'novalidate': 'novalidate'}}) }}
    <div style="position: relative; margin-bottom: 15px;">
        {{ form_widget(form.description, {'attr': {'placeholder': 'Description...', 'style': 'width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; color: #333; background: #fff;'}}) }}
        <i class="fa fa-edit" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); color: #aaa;"></i>
    </div>
    {{ form_errors(form.description, {'attr': {'style': 'color: #e74c3c;'}}) }}
    
    <div style="position: relative; margin-bottom: 15px;">
        {{ form_widget(form.montant, {'attr': {'placeholder': 'Montant (ariary)', 'step': '0.01', 'style': 'width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; color: #333; background: #fff;'}}) }}
        
    </div>
    {{ form_errors(form.montant, {'attr': {'style': 'color: #e74c3c;'}}) }}
    
    <div style="position: relative; margin-bottom: 15px;">
        {{ form_widget(form.date, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; color: #333; background: #fff;'}}) }}
        <i class="fa fa-calendar-alt" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); color: #aaa;"></i>
    </div>
    {{ form_errors(form.date, {'attr': {'style': 'color: #e74c3c;'}}) }}
    
    {% if form.categorie is defined %}
        <div style="position: relative; margin-bottom: 15px;">
            {{ form_widget(form.categorie, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px; color: #333; background: #fff;'}}) }}
            <i class="fa fa-tags" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); color: #aaa;"></i>
        </div>
        {{ form_errors(form.categorie, {'attr': {'style': 'color: #e74c3c;'}}) }}
    {% endif %}
    
    {{ form_rest(form) }}
    <button type="submit" style="background: #3498db; color: white; border: none; padding: 10px 20px; border-radius: 4px; cursor: pointer;">Modifier</button>
{{ form_end(form) }}