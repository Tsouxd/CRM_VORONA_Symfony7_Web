                                                            </div>
                                                            {{ form_errors(revenu_form.montant) }}
                                                            
                                                            <div style="position: relative; margin-bottom: 10px;">
                                                                {{ form_widget(revenu_form.date, {'attr': {'style': 'width: 100%; padding: 8px; border: none; border-radius: 4px;'}}) }}
                                                                <i class="fa fa-calendar-alt" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); color: #aaa;"></i>
                                                            </div>
                                                            {{ form_errors(revenu_form.date) }}
                                                            
                                                            {% if revenu_form.categorie is defined %}
                                                                <div style="position: relative; margin-bottom: 10px;">
                                                                    {{ form_widget(revenu_form.categorie, {'attr': {'style': 'width: 100%; padding: 8px; border: none; border-radius: 4px;'}}) }}
                                                                    <i class="fa fa-tags" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); color: #aaa;"></i>
                                                                </div>
                                                                {{ form_errors(revenu_form.categorie) }}
                                                            {% endif %}
                                                            
                                                            {{ form_rest(revenu_form) }}
                                                            <button type="submit" style="background: #27ae60; color: white; border: none; padding: 8px 15px; border-radius: 4px; cursor: pointer;">Ajouter</button>
                                                        {{ form_end(revenu_form) }}
                                                    {% else %}
                                                        <p style="color: #fff;">Formulaire de revenu non disponible.</p>
                                                    {% endif %}
                                                </div>
                                                
                                                <div class="main-btn"><a href="#4">Voir le résumé</a></div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <!-- Liste des revenus récents -->
                                            <div class="right-image" style="background: rgba(255,255,255,0.9); padding: 20px; border-radius: 10px;">
                                                <h4 style="color: #333; margin-bottom: 15px;">Revenus récents</h4>
                                                <div id="revenues-list">
                                                    {% if revenus is not empty %}
                                                        {% for r in revenus %}
                                                            <div class="revenu-item" style="display: {{ loop.index <= 5 ? 'flex' : 'none' }}; justify-content: space-between; padding: 8px 0; border-bottom: 1px solid #eee;" data-id="{{ r.id }}">
                                                                <span>{{ r.description }} ({{ r.date|date('d/m/Y') }})</span>
                                                                <div>
                                                                    <span style="color: #27ae60; font-weight: bold;">+{{ r.montant|number_format(2, ',', ' ') }} ariary</span>
                                                                    <button class="edit-revenue-btn" data-id="{{ r.id }}" style="background: #3498db; color: white; border: none; padding: 5px 10px; border-radius: 4px; margin-left: 10px; cursor: pointer;">
                                                                        <i class="fa fa-edit"></i>
                                                                    </button>
                                                                    <button class="delete-revenue-btn" data-id="{{ r.id }}" style="background: #e74c3c; color: white; border: none; padding: 5px 10px; border-radius: 4px; margin-left: 5px; cursor: pointer;">
                                                                        <i class="fa fa-trash"></i>
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        {% endfor %}
                                                        <div style="text-align: center; margin-top: 15px;">
                                                            <button id="voir-tous-revenus" style="background: #27ae60; color: white; border: none; padding: 8px 15px; border-radius: 4px; cursor: pointer;">
                                                                Voir tous les revenus
                                                            </button>
                                                        </div>
                                                    {% else %}
                                                        <div style="text-align: center; color: #666;">
                                                            <i class="fa fa-inbox" style="font-size: 2rem; margin-bottom: 10px;"></i>
                                                            <p>Aucun revenu enregistré</p>
                                                            <a href="{{ path('app_comptable_revenus_ajouter') }}" style="background: #27ae60; color: white; border: none; padding: 8px 15px; border-radius: 4px; cursor: pointer; text-decoration: none;">Ajouter un revenu</a>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Slide 4: Résumé Financier -->
        <div class="slide" id="4">
            <div class="content fourth-content">
                <div class="container-fluid">
                    <div class="row">
                        <!-- Statistiques financières sous forme de cartes -->
                        <div class="col-md-4 col-sm-6">
                            <div class="item">
                                <div class="thumb">
                                    <div class="hover-effect">
                                        <div class="hover-content">
                                            <h2>Total Dépenses</h2>
                                            <p style="font-size: 24px; color: #e74c3c; font-weight: bold;">-{{ totalDepenses|default(0)|number_format(2, ',', ' ') }} ariary</p>
                                            <p>Sorties de fonds ce mois</p>
                                        </div>
                                    </div>
                                    <div class="image" style="background: linear-gradient(135deg, #e74c3c, #c0392b); display: flex; align-items: center; justify-content: center; height: 200px;">
                                        <i class="fa fa-arrow-down" style="font-size: 48px; color: white;"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4 col-sm-6">
                            <div class="item">
                                <div class="thumb">
                                    <div class="hover-effect">
                                        <div class="hover-content">
                                            <h2>Total Revenus</h2>
                                            <p style="font-size: 24px; color: #27ae60; font-weight: bold;">+{{ totalRevenus|default(0)|number_format(2, ',', ' ') }} ariary</p>
                                            <p>Entrées de fonds ce mois</p>
                                        </div>
                                    </div>
                                    <div class="image" style="background: linear-gradient(135deg, #27ae60, #229954); display: flex; align-items: center; justify-content: center; height: 200px;">
                                        <i class="fa fa-arrow-up" style="font-size: 48px; color: white;"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4 col-sm-6">
                            <div class="item">
                                <div class="thumb">
                                    <div class="hover-effect">
                                        <div class="hover-content">
                                            <h2>{% if benefice|default(0) >= 0 %}Bénéfice{% else %}Déficit{% endif %}</h2>
                                            <p style="font-size: 24px; color: #3498db; font-weight: bold;">{{ benefice|default(0)|number_format(2, ',', ' ') }} ariary</p>
                                            <p>{% if benefice|default(0) >= 0 %}Situation positive{% else %}Situation déficitaire{% endif %}</p>
                                        </div>
                                    </div>
                                    <div class="image" style="background: linear-gradient(135deg, #3498db, #2980b9); display: flex; align-items: center; justify-content: center; height: 200px;">
                                        <i class="fa fa-{% if benefice|default(0) >= 0 %}chart-line{% else %}chart-line-down{% endif %}" style="font-size: 48px; color: white;"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Répartition financière -->
                        {% set total = (totalDepenses|default(0) + totalRevenus|default(0)) %}
                        {% if total > 0 %}
                            <div class="col-md-6 col-sm-6">
                                <div class="item">
                                    <div class="thumb">
                                        <div class="hover-effect">
                                            <div class="hover-content">
                                                <h2>Répartition des Dépenses</h2>
                                                <p>{{ (totalDepenses|default(0) / total * 100)|number_format(1) }}%</p>
                                            </div>
                                        </div>
                                        <div class="image" style="background: linear-gradient(135deg, #e74c3c, #c0392b); display: flex; align-items: center; justify-content: center; height: 200px;">
                                            <div class="progress-bar" style="width: 80%; height: 20px; background: #eee; border-radius: 10px;">
                                                <div class="progress-fill progress-expenses" style="width: {{ (totalDepenses|default(0) / total * 100)|round(2) }}%; background: #e74c3c; height: 100%; border-radius: 10px;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="item">
                                    <div class="thumb">
                                        <div class="hover-effect">
                                            <div class="hover-content">
                                                <h2>Répartition des Revenus</h2>
                                                <p>{{ (totalRevenus|default(0) / total * 100)|number_format(1) }}%</p>
                                            </div>
                                        </div>
                                        <div class="image" style="background: linear-gradient(135deg, #27ae60, #229954); display: flex; align-items: center; justify-content: center; height: 200px;">
                                            <div class="progress-bar" style="width: 80%; height: 20px; background: #eee; border-radius: 10px;">
                                                <div class="progress-fill progress-revenues" style="width: {{ (totalRevenus|default(0) / total * 100)|round(2) }}%; background: #27ae60; height: 100%; border-radius: 10px;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="col-md-12">
                                <div class="item">
                                    <div class="thumb">
                                        <div class="hover-effect">
                                            <div class="hover-content">
                                                <h2>Aucune donnée financière</h2>
                                                <p>Ajoutez des transactions pour voir les statistiques</p>
                                            </div>
                                        </div>
                                        <div class="image" style="background: linear-gradient(135deg, #95a5a6, #7f8c8d); display: flex; align-items: center; justify-content: center; height: 200px;">
                                            <i class="fa fa-chart-bar" style="font-size: 48px; color: white;"></i>
                                        </div>
